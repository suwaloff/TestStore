@model TestStore.Models.Product

<form method="post" asp-action="Delete">

    <div class="form-group row">
        <h2 class="text-info pl-3">Удаление Товара</h2>
    </div>
    <div class="row">
        <div class="col-8">
            <div class="form-group row py-2">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" disabled class="form-control" />

                </div>

            </div>
            <div class="form-group row py-2">
                <div class="col-4">
                    <label asp-for="Price"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Price" disabled class="form-control" />

                </div>

            </div>
            <div class="form-group row py-2">
                <div class="col-8 offset-4 row">

                    <div class="col">
                        <input type="submit" class="btn btn-info w-100 btn btn-danger" value="Подтвердить" />
                    </div>
                    <div class="col">
                        <a asp-action="Index" class="btn btn-success w-100 btn-dark"><i class="fas fa-sign-out-alt"></i> Назад</a>
                    </div>
                </div>
            </div>
        </div>
       
    </div>

</form>